{
    "env": {
        "commonjs": true,
        "es2020": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
 //       "indent": [ "error", "tab" ],
        "linebreak-style": [ "error", "unix" ],
		"semi": [1, "always"],
		"semi-spacing": [1, {"before": false, "after": true}],
        "no-cond-assign": ["error", "always"],
        "object-curly-spacing": [ "error", "always" ],
        "no-unused-vars": "off"
    }
}
